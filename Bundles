local Players = game:GetService("Players")
local plr = Players.LocalPlayer

local function overrideRunAnimation()
	local char = plr.Character or plr.CharacterAdded:Wait()
	local animate = char:WaitForChild("Animate")

	-- Temporarily disable Animate
	animate.Disabled = true

	-- Find the run animation object
	local runAnimFolder = animate:FindFirstChild("run")
	if runAnimFolder then
		local runAnim = runAnimFolder:FindFirstChild("RunAnim")
		if runAnim then
			runAnim.AnimationId = "rbxassetid://85811471336028" -- Replace with your animation ID
		end
	end

	-- Re-enable Animate so changes apply
	animate.Disabled = false
end

overrideRunAnimation()

local Players = game:GetService("Players")
local plr = Players.LocalPlayer

local function overrideIdleAnimation()
	local char = plr.Character or plr.CharacterAdded:Wait()
	local animate = char:WaitForChild("Animate")

	-- Disabilita Animate temporaneamente
	animate.Disabled = true

	-- Imposta il nuovo ID dell'animazione idle
	local idleAnim = animate:FindFirstChild("idle")
	if idleAnim then
		local anim1 = idleAnim:FindFirstChild("Animation1")
		if anim1 then
			anim1.AnimationId = "rbxassetid://109728747582911" -- <--- sostituisci con un ID valido
idleAnim:FindFirstChild("Animation2").AnimationId = "rbxassetid://109728747582911"
		end
	end

	-- Riattiva Animate per applicare i cambiamenti
	animate.Disabled = false
end

overrideIdleAnimation()
