local player = game.Players.LocalPlayer

-- Your animation IDs
local IDLE_ID = "rbxassetid://104238959556624"
local MOVE_ID = "rbxassetid://85811471336028" -- used for walk + run

local function apply(character)
	local animate = character:WaitForChild("Animate")

	-- ===== IDLE =====
	local idleFolder = animate:FindFirstChild("idle")
	if idleFolder then
		idleFolder:ClearAllChildren()

		local idleAnim = Instance.new("Animation")
		idleAnim.Name = "IdleOverride"
		idleAnim.AnimationId = IDLE_ID

		local weight = Instance.new("NumberValue")
		weight.Name = "Weight"
		weight.Value = 10
		weight.Parent = idleAnim

		idleAnim.Parent = idleFolder
	end

	-- ===== WALK =====
	local walkFolder = animate:FindFirstChild("walk")
	if walkFolder then
		walkFolder:ClearAllChildren()

		local walkAnim = Instance.new("Animation")
		walkAnim.Name = "WalkOverride"
		walkAnim.AnimationId = MOVE_ID

		local weight = Instance.new("NumberValue")
		weight.Name = "Weight"
		weight.Value = 10
		weight.Parent = walkAnim

		walkAnim.Parent = walkFolder
	end

	-- ===== RUN (THIS IS THE IMPORTANT PART) =====
	local runFolder = animate:FindFirstChild("run")
	if runFolder then
		runFolder:ClearAllChildren()

		local runAnim = Instance.new("Animation")
		runAnim.Name = "RunOverride"
		runAnim.AnimationId = MOVE_ID

		local weight = Instance.new("NumberValue")
		weight.Name = "Weight"
		weight.Value = 10
		weight.Parent = runAnim

		runAnim.Parent = runFolder
	end
end

player.CharacterAdded:Connect(apply)
if player.Character then
	apply(player.Character)
end
